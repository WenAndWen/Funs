<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/musicImageView"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <TextView
            android:text="《敬你》"
            android:textSize="16sp"
            android:id="@+id/musicTitleText"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="我以前不太懂 什么叫悲伤 以为哭得撕心裂肺 就是最悲伤了，后来我才懂得 其实悲伤就是，你看着她 还是会笑 还是会温柔以待 还是会心思柔软，心里却比任何时候都更清晰 也更明白，你再不能 也不应该同眼前这个人 亲近 哪怕半分，哪怕 你只是想 轻轻的 抱一抱她。 ——网易云热评《敬你》"
            android:textSize="13sp"
            android:maxLines="2"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/musicMessageText"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/musicAmountText"
                android:textSize="12sp"
                android:text="+72"
                android:gravity="center"
                android:background="@drawable/look_amount"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:text="网易"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/look_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/lookAmount"
                    android:background="@drawable/look_amount"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/ic_comment"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>